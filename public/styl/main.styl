@import 'yeticss/globals/_colors'
@import 'yeticss/globals/_variables'
@import 'yeticss/globals/_logos'

@import 'yeticss/components/base'
@import 'yeticss/components/buttons'
@import 'yeticss/components/code'
@import 'yeticss/components/grid'
@import 'yeticss/components/lists'
@import 'yeticss/components/type'

//- General

html,
body
  min-height: 100%

body
  border-style: solid
  border-color: lighten($gray-lighter, 50%)

//- Header

header
  padding-bottom: $ui-padding-extra-spaced
  border-bottom: 1px solid lighten($gray-lighter, 50%)
  
  h1
    margin-bottom: 0

  p
    font-size: $font-large
  
  .button
    margin: $space 0

//- Lists

ul li
  padding-bottom: 5px 

//- Code Highlighting

pre
  margin-top: 0
  color: black
  background: lighten($gray-lighter, 60%)

code
  color: black
  background: lighten($gray-lighter, 60%)

//- Footer

footer[role='contentinfo']
  padding: $ui-padding-extra-spaced 0
  border-top: 1px solid lighten($gray-lighter, 50%)
  color: $gray
  font-size: $font-medium
  text-align: center

  li:not(:last-of-type)
    &:after
      content: '•'
      margin: 0 5px 0 10px

  p
    margin-bottom: 0

  .logo
    margin-top: $space
    display: inline-block
    width: 17px
    height: 20px
    background: $logo-ampersand-gray no-repeat 0 0

//- Sectioning

section
  padding-top: $ui-padding-extra-spaced

  &:not(:last-child)
    border-bottom: 1px solid lighten($gray-lighter, 50%)

@media screen and (min-width: $breakpoint-tablet+1)
  
  body
    border-width: 10px

@media screen and (max-width: $breakpoint-tablet)

  body
    border-width: 5px